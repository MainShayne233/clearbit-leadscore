#!/usr/bin/env ruby
require 'rubygems'
require 'optparse'
require 'clearbit/lead_score'

begin
  require 'awesome_print'
rescue LoadError
  def ap(value)
    puts JSON.pretty_generate(value)
  end
end

options = {}

options[:api_key] = ENV['APIHUB_KEY'] || ENV['BALLER_KEY']

optparse = OptionParser.new do |opts|
  opts.banner = "Usage: clearbit-leadscore [options] email"

  opts.on("-k", "--api-key", "Set API Key") do |v|
    options[:api_key] = v
  end

  opts.on("-h", "--help", "Display this screen") do |v|
    puts opts
    exit
  end
end

optparse.parse!

unless options[:api_key]
  puts optparse
  exit
end

unless email = ARGV[0]
  puts optparse
  exit
end

Clearbit::LeadScore.api_key = options[:api_key]

if person = Clearbit::LeadScore.lookup(email)
  ap person

else
  puts 'Person not found'
end